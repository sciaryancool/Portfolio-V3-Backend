generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  username  String  @unique
  password  String  // bcrypt hash
  createdAt DateTime @default(now())
}

model SiteConfig {
  id            String @id @default("singleton")
  customHeading String
  version       String
  github        String
  x             String
  youtube       String
  linkedin      String
  instagram     String
}

model Skill {
  id   String @id @default(cuid())
  name String @unique
}

model Project {
  id   String @id @default(cuid())
  name String @unique
  url  String
}

model ServicePlan {
  id       String @id @default(cuid())
  name     String @unique
  features String // newline separated
  note     String // e.g., "For prices contact ..."
}
model Project {
  id          String  @id @default(cuid())
  name        String  @unique
  url         String
  cover       String?   // <— new: cover image URL
  description String?   // <— optional: short blurb
}