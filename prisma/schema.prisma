// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model SiteConfig {
  id            String  @id @default("singleton")
  customHeading String  @default("")
  version       String  @default("v1.0.0")
  github        String?
  x             String?
  youtube       String?
  linkedin      String?
  instagram     String?
}

model Skill {
  id   String @id @default(cuid())
  name String @unique
}

model Project {
  id   String @id @default(cuid())
  name String @unique
  url  String
}

model ServicePlan {
  id       String @id @default(cuid())
  name     String @unique
  features String
  note     String
}
